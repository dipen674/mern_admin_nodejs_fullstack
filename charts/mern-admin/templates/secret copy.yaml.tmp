apiVersion: v1
kind: Secret
metadata:
  name: mern-secrets
type: Opaque
stringData:
  #Passing them via github actions secrets store
  mongo-uri: {{ .Values.backend.secrets.databaseUri | quote }}
  jwt-secret: {{ .Values.backend.secrets.jwtSecret | quote }}
  secret: {{ .Values.backend.secrets.secret | quote }}
  key: {{ .Values.backend.secrets.key | quote }}

#these are added in configmap and we have ignored secrets.yaml file for security purpose
  jwt-scheme: {{ .Values.backend.secrets.jwtScheme | quote }}
  jwt-token-prefix: {{ .Values.backend.secrets.jwtTokenPrefix | quote }}
  jwt-token-expiration: {{ .Values.backend.secrets.jwtTokenExpiration | quote }}
  jwt-token-hash-algo: {{ .Values.backend.secrets.jwtTokenHashAlgo | quote }}
